@model MemberBookReservationViewModel

<h3>Add a book user</h3>
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddBookAndReservation" method="post">
            <div class="form-group">
                <input type="hidden" asp-for="MemberId" />
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" asp-items="@(new SelectList(ViewBag.Books, "Id", "Title"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="ReservationTime" class="control-label"></label>
                <input type="date" asp-for="ReservationTime" />
            </div>
            <button type="submit" class="btn btn-success">Add</button>
        </form>
    </div>
</div>