@model AddBookViewModel

<h3>Edit a book</h3>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="NewId" />
            <div class="form-group">
                <label asp-for="NewTitle" class="custom-control-label"></label>
                <input type="text" asp-for="NewTitle" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewBookGenre" class="control-label"></label>
                <select class="form-control" asp-for="NewBookGenre" asp-items="Html.GetEnumSelectList<BookGenreEnum>()"></select>
            </div>
            <small><b>If author does not exist try creating him.</b></small>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" asp-items="@(new SelectList(ViewBag.Authors, "Id", "AuthorFullName"))"></select>
            </div>
            <button type="submit" class="btn btn-success">Edit</button>
        </form>
    </div>
</div>