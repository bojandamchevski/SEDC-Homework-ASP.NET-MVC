@model BookDetailsViewModel

<div class="card" style="width: 20rem;">
    <img class="card-img-top" src="https://atlas-content-cdn.pixelsquid.com/stock-images/classic-library-book-hardcover-Va7RxV6-600.jpg" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.BookTitle</h5>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Author full name: <i>@Model.AuthorFullName</i></li>
            <li class="list-group-item">Book genre: <b>@Model.BookGenre</b></li>
        </ul>
    </div>
    <div class="card-body">
        <a class="card-link" asp-action="Edit" asp-route-id="@Model.Id">Edit book</a>
        <br />
        <a class="card-link" asp-action="Delete" asp-route-id="@Model.Id">Delete book</a>
    </div>
</div>