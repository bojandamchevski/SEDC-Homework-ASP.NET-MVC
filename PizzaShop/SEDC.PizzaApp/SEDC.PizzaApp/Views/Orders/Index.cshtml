@model List<OrderListViewModel>
@{
    Layout = "_Layout";
}

<partial name="~/Views/Shared/Partials/_OrderGreetingPartial.cshtml"/>

<h2>List of orders:</h2>
@for (int i = 0; i < Model.Count; i++)
{
    <p>Pizza: @Model[i].PizzaName - User: @Model[i].UserFullName</p>
}

<h4>@ViewData["Message"]</h4>
<h5>@ViewData["Date"]</h5>

<h6>Date and time: @DateTime.Now.ToShortDateString() @DateTime.Now.ToShortTimeString()</h6>

<button>
    <a asp-area="" asp-controller="Orders" asp-action="JsonReturn">Json View</a>
</button>
<button>
    <a asp-area="" asp-controller="Orders" asp-action="Details">Details</a>
</button>
<small>
    <button>
        <a asp-area="" asp-controller="Orders" asp-action="RedirectToHome">Go back to the homepage</a>
    </button>
</small>