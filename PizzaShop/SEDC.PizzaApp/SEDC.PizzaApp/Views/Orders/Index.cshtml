@model List<OrderListViewModel>
@*@{
        Layout = "_Layout";
    }*@

<partial name="~/Views/Shared/Partials/_OrderGreetingPartial.cshtml" />

<h2>List of orders:</h2>
@for (int i = 0; i < Model.Count; i++)
{
    <p>Pizza: @Model[i].PizzaName - User: @Model[i].UserFullName</p>
    <button>
        <a asp-area="" asp-controller="Orders" asp-action="Details" asp-route-id="@Model[i].Id">See order @Model[i].Id details</a>
    </button>
    <button>
        <a asp-action="EditOrder" asp-route-id="@Model[i].Id">See order @Model[i].Id details</a>
    </button>
}

<a asp-action="CreateOrder">Create order</a>

