@using SEDC.PizzaApp.Models.ViewModels
@model List<PizzaViewModel>

<h2>Here are our pizzas:</h2>
@for (int i = 0; i < Model.Count(); i++)
{
    <ol>
        <li>@Model[i].PizzaName</li>
        <ul>
            <li>@Model[i].PizzaSize</li>
            <li>@Model[i].Price.ToString("c")</li>
        </ul>
    </ol>
    <partial name="~/Views/Shared/Partials/_PizzaDetailsPartial.cshtml" for="@Model[i]" />
}

