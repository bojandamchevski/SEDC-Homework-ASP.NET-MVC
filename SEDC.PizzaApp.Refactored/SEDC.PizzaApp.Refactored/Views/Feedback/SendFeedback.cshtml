@model FeedbackDetailsViewModel

<h3>Send a feedback</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="SendFeedback" method="post">
            <div class="form-group">
                <label asp-for="Name" class="custom-control-label"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="custom-control-label"></label>
                <input type="email" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Message" class="custom-control-label"></label>
                <input type="text" asp-for="Message" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Send</button>
        </form>
    </div>
</div>